<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/unified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".01" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone" />

                <com.google.android.gms.ads.nativead.MediaView
                    android:id="@+id/ad_media"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".01" />

            <ImageView
                android:id="@+id/ad_app_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp" />


            <TextView
                android:id="@+id/ad_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:layout_toRightOf="@+id/ad_app_icon"
                android:ellipsize="end"
                android:text="fsdffdfsff"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".01" />

            <TextView
                android:id="@+id/ad_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ad_headline"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:gravity="center"
                android:text="Sponsoreddfsdfsfds"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".01" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="?attr/tabSelectedTextColor"
                android:background="@drawable/ads_button_bg">

                <TextView
                    android:id="@+id/ad_call_to_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="abc"
                    android:textAllCaps="true"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".01" />
        </LinearLayout>

        <TextView
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:layout_gravity="left"
            android:layout_marginLeft="-17dp"
            android:background="@drawable/ads_button_bg"
            android:backgroundTint="?attr/tabSelectedTextColor"
            android:gravity="center"
            android:rotation="-40"
            android:text="AD"
            android:textColor="@color/white"
            android:textSize="8dp"
            android:textStyle="bold" />
    </com.google.android.gms.ads.nativead.NativeAdView>
</androidx.cardview.widget.CardView>